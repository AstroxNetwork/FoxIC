{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2019", "DOM"],
    "strict": true,
    "module": "commonjs", //ii
    "target": "es2018", //ii
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "outDir": "/",
    "importHelpers": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      // "src$/*": ["src/frontend/src/*"],
      "@idls/*":["clients/idls/*"],
      "@tests/*":["clients/tests/*"],
      "@/*": ["clients/*"]
    },
    "noImplicitAny": false,
    "downlevelIteration": true
  },
  "include": [
    "clients/**/*",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests",
    "src/**/*.test.ts",
    "src/frontend/generated",
    "src/frontend/src/component/iconfont",
    "**/canisters",
    "webpack.config.js",
    "*.js",
    "scripts/deployer.js"
  ]
}

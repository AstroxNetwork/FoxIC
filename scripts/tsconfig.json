{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "./build",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
  },
  "include": [".", "builder.ts"],
  "exclude": ["dist", "node_modules"],
  "references": []
}
